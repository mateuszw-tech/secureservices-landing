<section id="uslugi" class="relative bg-background">
  <div class="container">
    <!-- Section Header -->
    <div class="max-w-2xl mb-12" data-reveal>
      <div class="badge mb-5">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        Nasze usługi
      </div>
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-4 sm:mb-5">
        Kompleksowe wsparcie <span class="gradient-text">Twojego biznesu</span>
      </h2>
      <p class="text-base sm:text-lg text-foreground-muted">
        Oferujemy szeroki zakres usług z dziedziny cyberbezpieczeństwa, zgodności i wsparcia IT.
      </p>
    </div>

    <!-- Services Grid - Compact with expand down -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-4" data-reveal>
      {services.map((service) => (
        <a 
          href="#kontakt"
          class="service-card group bg-background border border-border rounded-xl p-4 md:p-5 transition-all duration-300 hover:border-brand-primary hover:shadow-lg hover:shadow-brand-primary/10"
        >
          <!-- Header - always visible -->
          <div class="flex items-center gap-3">
            <div class="icon-container flex-shrink-0 w-10 h-10 md:w-11 md:h-11 transition-colors duration-300 group-hover:bg-brand-primary group-hover:text-white">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={icons[service.icon]} />
              </svg>
            </div>
            <h3 class="text-sm md:text-base font-semibold leading-tight group-hover:text-brand-primary transition-colors">{service.title}</h3>
          </div>

          <!-- Description - expands on hover -->
          <div class="description-wrapper">
            <p class="text-xs md:text-sm text-foreground-muted leading-relaxed pt-3">
              {service.description}
            </p>
          </div>
        </a>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-10" data-reveal>
      <p class="text-foreground-muted mb-4">Nie znalazłeś tego, czego szukasz?</p>
      <a href="#kontakt" class="btn-primary">
        Skontaktuj się z nami
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Mobile: always show description */
  @media (max-width: 767px) {
    .service-card .description-wrapper {
      display: block;
    }
  }
  
  /* Desktop: expand on hover */
  @media (min-width: 768px) {
    .service-card .description-wrapper {
      display: grid;
      grid-template-rows: 0fr;
      transition: grid-template-rows 0.3s ease;
    }
    
    .service-card .description-wrapper > p {
      overflow: hidden;
    }
    
    .service-card:hover .description-wrapper {
      grid-template-rows: 1fr;
    }
  }
</style>
