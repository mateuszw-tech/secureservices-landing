<section class="relative min-h-[100svh] sm:min-h-[90vh] flex items-center pt-20 sm:pt-24 pb-12 sm:pb-16 overflow-hidden bg-gradient-to-b from-background-secondary/50 to-background">
  <!-- Subtle Background Pattern -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  
  <div class="container relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Badge -->
      <div class="animate-fade-in-up">
        <div class="badge mb-8 mx-auto">
          <span class="w-2 h-2 rounded-full bg-success"></span>
          IT & Security
        </div>
      </div>

      <!-- Main Heading -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold mb-5 sm:mb-6 animate-fade-in-up delay-100">
        Budujemy świadomość.
        <span class="gradient-text"> Chronimy biznes.</span>
      </h1>

      <!-- Subheading -->
      <p class="text-base sm:text-lg md:text-xl text-foreground-muted max-w-2xl mx-auto mb-8 sm:mb-10 leading-relaxed animate-fade-in-up delay-200 px-2 sm:px-0">
        Audyty ISO 27001, ochrona danych osobowych, szkolenia security awareness. 
        Wsparcie IT, budowa aplikacji webowych i wdrożenia AI.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mb-12 sm:mb-16 animate-fade-in-up delay-300 px-4 sm:px-0">
        <a href="#kontakt" class="btn-primary text-sm sm:text-base px-6 sm:px-8 py-3.5 sm:py-4">
          Umów bezpłatną konsultację
          <svg class="w-4 sm:w-5 h-4 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a href="#uslugi" class="btn-secondary text-sm sm:text-base px-6 sm:px-8 py-3.5 sm:py-4">
          Poznaj nasze usługi
        </a>
      </div>

      <!-- Stats -->
      <div class="animate-fade-in-up delay-400">
        <div class="grid grid-cols-3 gap-4 sm:gap-8 max-w-xl mx-auto">
          <div class="text-center">
            <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-brand-primary mb-1">7+</div>
            <div class="text-xs sm:text-sm text-foreground-muted">Lat doświadczenia</div>
          </div>
          <div class="text-center border-x border-border px-2 sm:px-0">
            <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-brand-primary mb-1">100+</div>
            <div class="text-xs sm:text-sm text-foreground-muted">Zrealizowanych projektów</div>
          </div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-brand-primary mb-1">100%</div>
            <div class="text-xs sm:text-sm text-foreground-muted">Zadowolonych klientów</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator - hidden on mobile -->
  <div class="hidden sm:block absolute bottom-8 left-1/2 -translate-x-1/2 animate-fade-in delay-500">
    <a href="#uslugi" class="flex flex-col items-center gap-2 text-foreground-subtle hover:text-foreground-muted transition-colors">
      <span class="text-xs uppercase tracking-widest font-medium">Przewiń</span>
      <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
