<section id="kontakt" class="relative bg-background-secondary">
  <div class="container">
    <div class="grid lg:grid-cols-5 gap-12 lg:gap-16">
      <!-- Left Content -->
      <div class="lg:col-span-2" data-reveal>
        <div class="badge mb-5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          Kontakt
        </div>
        
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-5">
          Porozmawiajmy o <span class="gradient-text">współpracy</span>
        </h2>
        
        <p class="text-lg text-foreground-muted mb-10">
          Każda organizacja jest inna. Umów się na bezpłatną konsultację, 
          podczas której omówimy Twoje potrzeby i zaproponujemy optymalne rozwiązania.
        </p>

        <!-- Contact Info -->
        <div class="space-y-5 mb-10">
          <a href="mailto:biuro@secureservices.pl" class="flex items-center gap-4 group">
            <div class="icon-container group-hover:bg-brand-primary group-hover:text-white transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <div class="text-sm text-foreground-subtle">Email</div>
              <div class="font-medium group-hover:text-brand-primary transition-colors">biuro@secureservices.pl</div>
            </div>
          </a>

          <a href="tel:+48730762823" class="flex items-center gap-4 group">
            <div class="icon-container group-hover:bg-brand-primary group-hover:text-white transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <div class="text-sm text-foreground-subtle">Telefon</div>
              <div class="font-medium group-hover:text-brand-primary transition-colors">+48 730 762 823</div>
            </div>
          </a>

          <div class="flex items-center gap-4">
            <div class="icon-container">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-sm text-foreground-subtle">Lokalizacje</div>
              <div class="font-medium">Elbląg, Polska</div>
              <div class="font-medium">Gdańsk, Polska</div>
            </div>
          </div>
        </div>

        <!-- Response Time -->
        <div class="p-4 rounded-xl bg-success/10 border border-success/20">
          <div class="flex items-center gap-3">
            <div class="w-2.5 h-2.5 rounded-full bg-success"></div>
            <span class="text-sm text-success font-medium">Odpowiadamy w ciągu 24 godzin</span>
          </div>
        </div>
      </div>

      <!-- Right Content - Form -->
      <div class="lg:col-span-3" data-reveal>
        <div class="card-elevated p-8 md:p-10">
          <form id="contact-form" class="space-y-5">
            <div class="grid md:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-sm font-medium mb-2">Imię i nazwisko</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-background border border-border text-foreground placeholder-foreground-subtle focus:border-brand-primary focus:outline-none focus:ring-2 focus:ring-brand-primary/20 transition-all"
                  placeholder="Jan Kowalski"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium mb-2">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-background border border-border text-foreground placeholder-foreground-subtle focus:border-brand-primary focus:outline-none focus:ring-2 focus:ring-brand-primary/20 transition-all"
                  placeholder="jan@firma.pl"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-5">
              <div>
                <label for="company" class="block text-sm font-medium mb-2">Firma</label>
                <input 
                  type="text" 
                  id="company" 
                  name="company"
                  class="w-full px-4 py-3 rounded-lg bg-background border border-border text-foreground placeholder-foreground-subtle focus:border-brand-primary focus:outline-none focus:ring-2 focus:ring-brand-primary/20 transition-all"
                  placeholder="Nazwa firmy"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium mb-2">Telefon</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg bg-background border border-border text-foreground placeholder-foreground-subtle focus:border-brand-primary focus:outline-none focus:ring-2 focus:ring-brand-primary/20 transition-all"
                  placeholder="+48 123 456 789"
                />
              </div>
            </div>

            <div>
              <label for="service" class="block text-sm font-medium mb-2">Czego potrzebujesz?</label>
              <select 
                id="service" 
                name="service"
                class="w-full px-4 py-3 rounded-lg bg-background border border-border text-foreground focus:border-brand-primary focus:outline-none focus:ring-2 focus:ring-brand-primary/20 transition-all appearance-none cursor-pointer"
                style="background-image: url('data:image/svg+xml;charset=US-ASCII,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2224%22 height=%2224%22 fill=%22none%22 stroke=%22%2394a3b8%22 stroke-width=%222%22 stroke-linecap=%22round%22 stroke-linejoin=%22round%22><path d=%22M6 9l6 6 6-6%22/></svg>'); background-repeat: no-repeat; background-position: right 1rem center; background-size: 1.25rem;"
              >
                <option value="">Wybierz usługę...</option>
                <option value="szbi">Dokumentacja SZBI</option>
                <option value="iso">Audyt ISO 27001</option>
                <option value="rodo">Ochrona danych osobowych (IOD)</option>
                <option value="awareness">Szkolenia dla pracowników</option>
                <option value="pentest">Testy penetracyjne</option>
                <option value="vulnerability">Badanie podatności sieci</option>
                <option value="incident">Reagowanie na incydenty</option>
                <option value="it-support">Wsparcie informatyczne</option>
                <option value="webdev">Aplikacje internetowe</option>
                <option value="ai">Szkolenia z AI</option>
                <option value="other">Inne / Konsultacja ogólna</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium mb-2">Wiadomość</label>
              <textarea 
                id="message" 
                name="message"
                required
                rows="4"
                class="w-full px-4 py-3 rounded-lg bg-background border border-border text-foreground placeholder-foreground-subtle focus:border-brand-primary focus:outline-none focus:ring-2 focus:ring-brand-primary/20 transition-all resize-none"
                placeholder="Opisz swoje potrzeby lub zadaj pytanie..."
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input 
                type="checkbox" 
                id="privacy" 
                name="privacy"
                required
                class="mt-0.5 w-5 h-5 rounded border-border bg-background text-brand-primary focus:ring-brand-primary focus:ring-offset-0 cursor-pointer"
              />
              <label for="privacy" class="text-sm text-foreground-muted leading-relaxed cursor-pointer">
                Wyrażam zgodę na przetwarzanie moich danych osobowych w celu udzielenia odpowiedzi na zapytanie. 
                <a href="/polityka-prywatnosci" class="text-brand-primary hover:underline">Polityka prywatności</a>
              </label>
            </div>

            <button type="submit" class="btn-primary w-full py-3.5 text-base">
              Wyślij wiadomość
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </button>
          </form>

          <!-- Success State -->
          <div id="success-state" class="hidden text-center py-12">
            <div class="w-16 h-16 rounded-full bg-success/10 flex items-center justify-center mx-auto mb-5">
              <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Wiadomość wysłana!</h3>
            <p class="text-foreground-muted">
              Dziękujemy za kontakt. Odpowiemy w ciągu 24 godzin.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successState = document.getElementById('success-state');
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
  const btnText = submitBtn?.innerHTML;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Disable button and show loading
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Wysyłanie...
      `;
    }

    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      company: formData.get('company'),
      phone: formData.get('phone'),
      service: formData.get('service'),
      message: formData.get('message'),
    };

    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        form.style.display = 'none';
        successState?.classList.remove('hidden');
      } else {
        alert(result.error || 'Wystąpił błąd podczas wysyłania wiadomości.');
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.innerHTML = btnText;
        }
      }
    } catch (error) {
      alert('Wystąpił błąd podczas wysyłania wiadomości. Spróbuj ponownie później.');
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.innerHTML = btnText;
      }
    }
  });
</script>
