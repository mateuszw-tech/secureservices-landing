---
const caseStudies = [
  {
    industry: "Klient prywatny",
    metric: "100%",
    metricLabel: "Profesjonalizmu",
    services: ["Naprawa strony", "Odzyskanie danych", "Zabezpieczenie"],
    quote: "Po ataku na moją stronę internetową reakcja była błyskawiczna. Strona została naprawiona i zabezpieczona w jeden dzień.",
  },
  {
    industry: "Sektor publiczny",
    metric: "100%",
    metricLabel: "Zgodność z RODO",
    services: ["Ochrona danych osobowych", "Audyt RODO", "Szkolenia"],
    quote: "Kompleksowa obsługa w zakresie ochrony danych osobowych. Szybka reakcja i fachowe doradztwo.",
  },
  {
    industry: "Branża IT",
    metric: "100%",
    metricLabel: "Zadowolenia",
    services: ["Testy penetracyjne", "Badanie podatności", "Wsparcie IT"],
    quote: "Rzetelna analiza bezpieczeństwa i konkretne rekomendacje, które realnie poprawiły naszą infrastrukturę.",
  }
];

const trustedBy = ['Fintech', 'Healthcare', 'E-commerce', 'Manufacturing', 'Government'];
---

<section id="realizacje" class="relative bg-background">
  <div class="container">
    <!-- Section Header -->
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6 mb-14" data-reveal>
      <div class="max-w-2xl">
        <div class="badge mb-5">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
          </svg>
          Case Studies
        </div>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
          Udowodnione <span class="gradient-text">rezultaty</span>
        </h2>
        <p class="text-base sm:text-lg text-foreground-muted">
          Poznaj historie sukcesu naszych klientów i dowiedz się, jak pomagamy 
          organizacjom budować odporność na cyberzagrożenia.
        </p>
      </div>
      <a href="#kontakt" class="btn-secondary shrink-0 hidden sm:inline-flex">
        Zostań kolejną historią sukcesu
      </a>
    </div>

    <!-- Case Studies Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      {caseStudies.map((study, index) => (
        <div 
          class="card-elevated p-5 sm:p-7 flex flex-col"
          data-reveal
          style={`--delay: ${index * 0.1}s`}
        >
          <!-- Industry Badge -->
          <div class="text-xs font-semibold uppercase tracking-wider text-foreground-subtle mb-4 sm:mb-5">
            {study.industry}
          </div>
          
          <!-- Metric -->
          <div class="mb-4 sm:mb-5">
            <div class="text-3xl sm:text-4xl md:text-5xl font-bold text-brand-primary mb-1">{study.metric}</div>
            <div class="text-sm text-foreground-muted">{study.metricLabel}</div>
          </div>

          <!-- Services Used -->
          <div class="flex flex-wrap gap-1.5 sm:gap-2 mb-4 sm:mb-5 pb-4 sm:pb-5 border-b border-border">
            {study.services.map((service) => (
              <span class="px-2 sm:px-3 py-1 text-[10px] sm:text-xs font-medium bg-background-secondary rounded-full text-foreground-muted">
                {service}
              </span>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="flex-grow">
            <p class="text-foreground-muted italic text-sm leading-relaxed">
              "{study.quote}"
            </p>
          </blockquote>
        </div>
      ))}
    </div>

    <!-- Trust Logos -->
    <div class="mt-10 sm:mt-16 pt-8 sm:pt-12 border-t border-border" data-reveal>
      <p class="text-center text-xs sm:text-sm text-foreground-subtle mb-6 sm:mb-8 uppercase tracking-wider font-medium">
        Zaufali nam liderzy branży
      </p>
      <div class="flex flex-wrap items-center justify-center gap-x-6 sm:gap-x-12 gap-y-3 sm:gap-y-4">
        {trustedBy.map((industry) => (
          <div class="text-foreground-subtle/60 text-sm sm:text-base font-semibold tracking-wide hover:text-foreground-muted transition-colors">
            {industry}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
