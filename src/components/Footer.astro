---
const currentYear = new Date().getFullYear();

const footerLinks = {
  uslugi: [
    { label: "Audyt ISO 27001", href: "#uslugi" },
    { label: "Ochrona danych osobowych", href: "#uslugi" },
    { label: "Szkolenia Security Awareness", href: "#uslugi" },
    { label: "Testy penetracyjne", href: "#uslugi" },
    { label: "Wsparcie IT", href: "#uslugi" },
    { label: "Aplikacje internetowe", href: "#uslugi" },
  ],
  firma: [
    { label: "O nas", href: "#o-nas" },
    { label: "Realizacje", href: "#realizacje" },
    { label: "Kontakt", href: "#kontakt" },
  ],
};
---

<footer class="bg-foreground text-white pt-16 pb-8">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12 mb-12">
      <!-- Brand Column -->
      <div class="col-span-2">
        <a href="/" class="inline-block mb-5">
          <img 
            src="/logo.png" 
            alt="SecureServices" 
            class="h-10 w-auto"
          />
        </a>
        
        <p class="text-white/60 text-sm mb-6 max-w-xs leading-relaxed">
          Profesjonalne usługi IT i cyberbezpieczeństwa. Audyty, szkolenia, 
          ochrona danych i wsparcie techniczne dla firm.
        </p>

        <!-- Social Links -->
        <div class="flex gap-3">
          <a href="https://www.linkedin.com/in/andrzej-wi%C5%9Bniewski-94450924b/" target="_blank" rel="noopener" class="w-9 h-9 rounded-lg bg-white/10 flex items-center justify-center text-white/60 hover:bg-white/20 hover:text-white transition-all" aria-label="LinkedIn Andrzej Wiśniewski">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/in/mateuszw1204/" target="_blank" rel="noopener" class="w-9 h-9 rounded-lg bg-white/10 flex items-center justify-center text-white/60 hover:bg-white/20 hover:text-white transition-all" aria-label="LinkedIn Mateusz">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Usługi -->
      <div>
        <h4 class="font-semibold text-white mb-4">Usługi</h4>
        <ul class="space-y-3">
          {footerLinks.uslugi.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-white/60 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Firma -->
      <div>
        <h4 class="font-semibold text-white mb-4">Firma</h4>
        <ul class="space-y-3">
          {footerLinks.firma.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-white/60 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>

        <div class="mt-8">
          <a href="#kontakt" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-brand-primary text-white text-sm font-medium hover:bg-brand-secondary transition-colors">
            Skontaktuj się
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-white/10">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-white/40">
          © {currentYear} SECURE SERVICES Andrzej Wiśniewski. Wszelkie prawa zastrzeżone.
        </p>
        <div class="flex items-center gap-6">
          <a href="/polityka-prywatnosci" class="text-sm text-white/40 hover:text-white/60 transition-colors">
            Polityka prywatności
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
